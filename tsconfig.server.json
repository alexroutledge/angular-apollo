{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noEmit": false,
    "noEmitHelpers": false,
    "strictNullChecks": false,
    "outDir": "dist"
  },
  "include": [
    "src/server/**/*.ts"
  ],
  "exclude": [
    "src/server/**/*.spec.ts",
    "src/server/**/*.e2e.ts"
  ]
}
