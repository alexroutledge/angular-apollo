{
  "name": "angular-starter-kit",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "ci.to-file": "teeouterr ci.txt npm run all.ci",
    "all.ci": "npm install && npm run build.prod && npm run test.unit",
    "build.dev": "npm run build.client.dev && npm run build.server",
    "build.prod": "npm run build.client.prod && npm run build.server",
    "build.client.dev": "npm run pre.build && npm run lint.client && npm run clean.client && ng build --dev",
    "build.client.prod": "npm run pre.build && npm run lint.client && npm run clean.client && ng build --prod",
    "build.server": "npm run lint.server && npm run clean.server && tsc -p tsconfig.server.json",
    "clean.client": "rimraf dist/client dll",
    "clean.server": "rimraf dist/server",
    "lint.client": "stylelint \"src/client/**/*.scss\" \"src/client/**/*.css\" && tslint \"src/client/**/*.ts\"",
    "lint.server": "tslint \"src/server/**/*.ts\" --exclude \"src/server/**/*.spec.ts\"",
    "lint.unit.client": "tslint \"src/client/**/*.spec.ts\"",
    "lint.unit.server": "tslint \"src/server/**/*.spec.ts\"",
    "pre.build": "npm run tools.check-copyright && npm run tools.auto-translate",
    "test.e2e": "ng e2e",
    "test.unit": "npm run test.unit.server && npm run test.unit.client",
    "test.unit.client": "npm run lint.unit.client && ng test --code-coverage --colors",
    "test.unit.server": "npm run lint.unit.server && nyc mocha src/server/**/*.spec.ts",
    "tools.auto-translate": "node tools/auto-translate.js",
    "tools.check-copyright": "node tools/check-copyright.js",
    "serve.dev": "concurrently \"ng serve --proxy-config proxy.conf.json\" \"npm run serve.node\"",
    "serve.node": "nodemon --exec ./node_modules/.bin/ts-node -- src/server/index.ts",
    "serve.prod": "npm run serve.node"
  },
  "private": true,
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/server/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "src/server/**/*.spec.ts"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "report-dir": "./coverage-node",
    "require": [
      "./config/ts-node.helper.js",
      "source-map-support/register"
    ],
    "all": true
  },
  "dependencies": {
    "@angular/animations": "^5.2.0",
    "@angular/common": "^5.2.0",
    "@angular/compiler": "^5.2.0",
    "@angular/core": "^5.2.0",
    "@angular/forms": "^5.2.0",
    "@angular/http": "^5.2.0",
    "@angular/platform-browser": "^5.2.0",
    "@angular/platform-browser-dynamic": "^5.2.0",
    "@angular/router": "^5.2.0",
    "@angular/service-worker": "^5.2.9",
    "@ngrx/effects": "^5.2.0",
    "@ngrx/store": "^5.2.0",
    "@ngx-translate/core": "^9.1.1",
    "@ngx-translate/http-loader": "^2.0.1",
    "apollo-angular": "^1.0.1",
    "apollo-angular-link-http": "^1.0.3",
    "apollo-cache-inmemory": "^1.1.12",
    "apollo-client": "^2.2.8",
    "apollo-link": "^1.2.2",
    "apollo-link-ws": "^1.0.8",
    "apollo-utilities": "^1.0.11",
    "body-parser": "^1.17.1",
    "bootstrap": "^4.1.0",
    "chart.js": "^2.7.2",
    "concurrently": "^3.5.1",
    "core-js": "^2.4.1",
    "cors": "^2.8.4",
    "express": "^4.15.2",
    "express-graphql": "^0.6.12",
    "font-awesome": "4.7.0",
    "graphql": "^0.13.2",
    "graphql-server-core": "^0.8.2",
    "graphql-server-express": "^1.3.6",
    "graphql-server-module-graphiql": "^0.8.2",
    "graphql-subscriptions": "^0.5.8",
    "graphql-tag": "^2.9.1",
    "graphql-tools": "^3.0.0",
    "hammerjs": "2.0.8",
    "lodash": "^4.17.5",
    "moment": "^2.21.0",
    "ng2-charts": "^1.6.0",
    "roboto-fontface": "^0.9.0",
    "rxjs": "^5.5.6",
    "subscriptions-transport-ws": "^0.9.8",
    "zone.js": "^0.8.19"
  },
  "devDependencies": {
    "@angular/cli": "~1.7.3",
    "@angular/compiler-cli": "^5.2.0",
    "@angular/language-service": "^5.2.0",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "chai": "^4.1.2",
    "codelyzer": "^4.0.1",
    "google-translate-api": "^2.3.0",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-mocha-reporter": "^2.2.5",
    "karma-remap-coverage": "^0.1.5",
    "mocha": "^5.0.4",
    "nodemon": "^1.17.2",
    "nyan-progress": "^1.1.0",
    "nyc": "^11.6.0",
    "protractor": "~5.1.2",
    "rimraf": "^2.6.2",
    "stylelint": "^9.1.3",
    "teeouterr": "^1.2.0",
    "ts-node": "~4.1.0",
    "tslint": "~5.9.1",
    "tslint-no-unused-expression-chai": "0.0.3",
    "typescript": "~2.5.3",
    "webpack-dev-server": "~2.11.0",
    "@angular-devkit/core": "0.3.2",
    "@ngtools/webpack": "1.10.2",
    "webpack": "~3.11.0",
    "autoprefixer": "^7.2.3",
    "file-loader": "^1.1.5",
    "html-webpack-plugin": "^2.29.0",
    "less-loader": "^4.0.5",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.10",
    "postcss-url": "^7.1.2",
    "raw-loader": "^0.5.1",
    "sass-loader": "^6.0.6",
    "istanbul-instrumenter-loader": "^3.0.0",
    "style-loader": "^0.19.1",
    "stylus-loader": "^3.0.1",
    "url-loader": "^0.6.2",
    "circular-dependency-plugin": "^4.2.1",
    "copy-webpack-plugin": "~4.4.1",
    "uglifyjs-webpack-plugin": "^1.1.8"
  }
}
